{
  "id": "com.example.YourApp",
  "runtime": "org.gnome.Platform",
  "runtime-version": "40",
  "sdk": "org.gnome.Sdk",
  "command": "python3",
  "finish-args": ["--share=network"],
  "modules": [
    {
      "name": "your-app",
      "buildsystem": "simple",
      "build-commands": [
        "pip install -r requirements.txt",
        "python3 setup.py install --prefix=/app"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}

